{
    "name": "Athought Dev Container",
    "build": {
        "dockerfile": "../.devcontainer/Dockerfile",
        "context": ".."
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/ArtificialThought,type=bind,consistency=cached",
    "workspaceFolder": "/ArtificialThought",
    "forwardPorts": [8501],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    "runArgs": ["--platform=linux/amd64"]
}